@model IEnumerable<FairfaxCounty.JCAS_Public_MVC.Models.JcasMessage>

@{
    ViewBag.Title = "Application Messages";
}

<h2>@ViewBag.Title</h2>

<table class="table hidden-xs">
    <tr>
        <th>@Html.ActionLink("Create New", "Create")</th>
        <th>
            Message Text
        </th>
        <th>
            Display As Error
        </th>
        <th>
            Application Available
        </th>
        <th>
            Start DateTime
        </th>
        <th>
            End DateTime
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayAsError)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationAvailable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDateTime)
        </td>
    </tr>
}
</table>
<div class="panel-group col-sm-12 visible-xs">
    @Html.ActionLink("Create New", "Create")
    @foreach (var item in Model)
    {
    <div class="panel panel-primary">
        <div class="panel-heading">
            @Html.DisplayFor(modelItem => item.MessageText)
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </div>
        <div class="panel-body">
            @Html.DisplayFor(modelItem => item.DisplayAsError) <br />
            @Html.DisplayFor(modelItem => item.ApplicationAvailable) <br />
            @Html.DisplayFor(modelItem => item.StartDateTime) <br />
            @Html.DisplayFor(modelItem => item.EndDateTime)
        </div>
    </div>
    }
</div>